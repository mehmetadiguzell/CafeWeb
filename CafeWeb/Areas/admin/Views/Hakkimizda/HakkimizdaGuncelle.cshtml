@model CafeWeb.Models.Hakkimizda
@{
    ViewBag.Title = "Hakkımızda Güncelle";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    @using (Html.BeginForm("Kaydet", "Hakkimizda", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {


        <table class="table table-bordered" style="margin-left:200px">
            <tr>
                <td>Foto</td>
                <td>
                    <img src="~/Content/img/@Model.aboutImage" width="250" alt="Alternate Text" />
                    @Html.TextBoxFor(m => m.fotoFile, new { type = "file" })
                </td>
            </tr>

            <tr>
                <td>Üst Başlık</td>
                <td> 
                    @Html.TextBoxFor(m => m.UstBaslik, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m=>m.UstBaslik)
                </td>
            </tr>

            <tr>
                <td>Başlık</td>
                <td>
                    @Html.TextBoxFor(m => m.Baslik, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Baslik)
                </td>
            </tr>

            <tr>
                <td>Başlık</td>
                <td>
                    @Html.TextAreaFor(m => m.Aciklama, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Aciklama)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.HiddenFor(m => m.aboutImage)
                    @Html.HiddenFor(m => m.Id)
                    <button type="submit" class="btn btn-success">KAYDET</button>
                </td>
            </tr>
        </table>
       

    }

</div>

@section altTaraf{

    <!-- summernote -->
    <link rel="stylesheet" href="~/Content/admin/plugins/summernote/summernote-bs4.min.css">
    <!-- Summernote -->
    <script src="~/Content/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#Aciklama').summernote()
        });
    </script>
}


