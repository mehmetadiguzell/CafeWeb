@model CafeWeb.Models.Urunler
@{
    ViewBag.Title = "Ürün Ekle";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="container">
        <h2>Ürünler Form Sayfası</h2>
        @using (Html.BeginForm("Kaydet", "Urunler", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <table class="table table-hover bg-white">
                <tr>
                    <td>Foto</td>
                    <td>
                        @if (Model.urunImage != null)
                        {
                            <img src="~/Content/img/@Model.urunImage" width="250" alt="Alternate Text" />
                        }
                        @Html.TextBoxFor(m => m.urunFile, new { type = "file" })
                    </td>
                </tr>

                <tr>
                    <td>Üst Başlık</td>
                    <td>  @Html.TextBoxFor(m => m.UstBaslik, new { @class = "form-control" }) </td>
                </tr>

                <tr>
                    <td>Başlık</td>
                    <td> @Html.TextBoxFor(m => m.Baslik, new { @class = "form-control" }) </td>
                </tr>

                <tr>
                    <td>Ürün Açıklama</td>
                    <td>@Html.TextAreaFor(m => m.Aciklama, new { @class = "form-control" }) </td>
                </tr>

                <tr>
                    <td>Sıra</td>
                    <td> @Html.TextBoxFor(m => m.Sira, new { @class = "form-control" }) </td>
                </tr>
                <tr>
                    <td>Başlık</td>
                    <td>
                        <label> @Html.CheckBoxFor(m => m.Aktiflik) Aktif mi? </label>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.HiddenFor(m => m.urunImage)
                        @Html.HiddenFor(m => m.Id)
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </td>
                </tr>
            </table>
        }
    </div>

</div>

@section altTaraf{

    <!-- summernote -->
    <link rel="stylesheet" href="~/Content/admin/plugins/summernote/summernote-bs4.min.css">
    <!-- Summernote -->
    <script src="~/Content/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#Aciklama').summernote()
        });
    </script>
}
